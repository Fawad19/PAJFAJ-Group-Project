<%- include ../partials/header.ejs %> <%- include ../partials/main_nav.ejs %>
<!-- Main Content -->
<div class="container">
    <div class="row">
        <div class="offset-md-2 col-md-5"><br><br>
            <h1><%= title %></h1><br>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="fnameTextField">First Name </label>
                    <input type="text" class="form-control"
                    id="fnameTextField"
                    placeholder="Enter the first name!"
                    name="firstName"
                    value="<%= SurveyList.firstName %>" 
                    required>
                </div>

                <div class="form-group">
                    <label for="lnameTextField">Last Name </label>
                    <input type="text" class="form-control"
                    id="lnameTextField"
                    placeholder="Enter the last name!"
                    name="lastName" 
                    value="<%= SurveyList.lastName %>" 
                    required>
                </div>

                <div class="form-group">
                    <label for="emailTextField">Email address </label>
                    <input type="text" class="form-control"
                    id="emailTextField"
                    placeholder="Enter the email address!"
                    name="email" 
                    value="<%= SurveyList.email %>" 
                    required>
                </div>

                <div class="form-group">
                    <label for="addressTextField">Address </label>
                    <input type="text" class="form-control"
                    id="addressTextField"
                    placeholder="Enter the address!"
                    name="address" 
                    value="<%= SurveyList.address %>" 
                    required>
                </div>

                <div class="form-group">
                    <label for="gpaTextField">GPA </label>
                    <input type="text" class="form-control"
                    id="gpaTextField"
                    placeholder="Enter the GPA!"
                    name="GPA" 
                    value="<%= SurveyList.GPA %>" 
                    required>
                </div>

                <div class="form-group">
                    <label for="countryTextField">Country </label>
                    <input type="text" class="form-control"
                    id="countryTextField"
                    placeholder="Enter your country!"
                    name="country" 
                    value="<%= SurveyList.country %>" 
                    required>
                </div>

                <div class="form-group">
                    <label for="dobTextField">Date of birth </label>
                    <input type="text" class="form-control"
                    id="dobTextField"
                    placeholder="Enter the date of birth!"
                    name="dateOfBirth" 
                    value="<%= SurveyList.dateOfBirth %>" 
                    required>
                </div>

                <div class="form-group">
                    <label for="majorTextField">Your major </label>
                    <input type="text" class="form-control"
                    id="majorTextField"
                    placeholder="Enter your major!"
                    name="major" 
                    value="<%= SurveyList.major %>" 
                    required>
                </div>

                <div class="form-group">
                    <label for="numberTextField">Phone number </label>
                    <input type="text" class="form-control"
                    id="numberTextField"
                    placeholder="Enter the phone number!"
                    name="phoneNumber" 
                    value="<%= SurveyList.phoneNumber %>" 
                    required>
                </div>

                <div class="form-group">
                    <label for="schoolTextField">Your school </label>
                    <input type="text" class="form-control"
                    id="schoolTextField"
                    placeholder="Enter your school!"
                    name="school" 
                    value="<%= SurveyList.school %>" 
                    required>
                </div>

                <div class="form-group">
                    <label for="semesterTextField">Semester </label>
                    <input type="text" class="form-control"
                    id="semesterTextField"
                    placeholder="Enter the semester!"
                    name="semester" 
                    value="<%= SurveyList.semester %>" 
                    required>
                </div>

                <div class="form-group">
                    <label for="commentsTextField">Comments </label>
                    <textarea rows="5" cols="30" type="text" class="form-control"
                    id="commentsTextField"
                    placeholder="Enter your comments here!"
                    name="comments" 
                    value="<%= SurveyList.comments %>" 
                    required>
                </div>
                <br>
                <button class="btn btn-primary" type="submit">
                <i class="fas fa-edit"></i> Submit</button>
                
                <a href="/survey-list" class="btn btn-warning">
                <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>
<%- include ../partials/bottom_nav.ejs %> <%- include ../partials/footer.ejs %>